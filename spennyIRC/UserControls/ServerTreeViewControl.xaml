<UserControl x:Class="spennyIRC.ServerTreeViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:spennyIRC"
             xmlns:uc="clr-namespace:spennyIRC.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <uc:IrcTreeServerTreeView x:Name="serverTreeView"
                  ItemsSource="{Binding Servers}"
                  SelectedItemChanged="TreeView_SelectedItemChanged"
                  Grid.Column="0"
                  BorderThickness="0"
                  Background="Black"
                  Foreground="MediumPurple">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Style.Triggers>
                        <Trigger Property="HasItems" Value="True">
                            <Setter Property="IsExpanded" Value="True" />
                        </Trigger>
                    </Style.Triggers>
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Close" />
                                <!--Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          CommandParameter="{Binding}" />-->
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Channels}">
                    <TextBlock Text="{Binding Caption}" Foreground="White" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </uc:IrcTreeServerTreeView>
    </Grid>
</UserControl>