<UserControl x:Class="spennyIRC.UserControls.IrcQueryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:spennyIRC.UserControls"
             mc:Ignorable="d"
             DataContextChanged="UserControl_DataContextChanged"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:IrcRichTextBox x:Name="ChatDisplay"
                     IsReadOnly="True"
                     Grid.Row="0"
                     Cursor="Arrow"
                     VerticalScrollBarVisibility="Visible"
                     Foreground="White"
                     FontFamily="Verdana">
            <RichTextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Cut" />
                    <MenuItem Header="Copy" />
                    <MenuItem Header="Paste" />
                    <Separator />
                </ContextMenu>
            </RichTextBox.ContextMenu>
        </local:IrcRichTextBox>
        <local:IrcCommandTextBox DataContext="{Binding }" Grid.Row="1" Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="Black" Foreground="White" FontFamily="Verdana" />
    </Grid>
</UserControl>