<UserControl x:Class="spennyIRC.MainIrcWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:spennyIRC"
             xmlns:uc="clr-namespace:spennyIRC.UserControls"
             xmlns:vms="clr-namespace:spennyIRC.ViewModels;assembly=spennyIRC.ViewModels"
             mc:Ignorable="d"
             DataContextChanged="UserControl_DataContextChanged"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <local:ServerTreeViewControl x:Name="serverTreeViewControl" Grid.Column="0" DataContext="{Binding }" SelectedItem="{Binding ActiveContent, Mode=TwoWay}" />
        <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Center" />
        <uc:IrcContentControl Grid.Column="2" CacheKey="{Binding ActiveContent, Mode=TwoWay}" />
    </Grid>
</UserControl>