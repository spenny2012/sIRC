<UserControl x:Class="spennyIRC.IrcChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:spennyIRC"
             xmlns:uc="clr-namespace:spennyIRC.UserControls"
             mc:Ignorable="d" 
             DataContextChanged="UserControl_DataContextChanged"
             Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="{Binding ChannelTopic, Mode=TwoWay}" Background="Black" Foreground="White"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>
            <uc:IrcRichTextBox x:Name="ChatDisplay"
                        IsReadOnly="True"
                        Grid.Row="0" 
                        Cursor="Arrow"
                        VerticalScrollBarVisibility="Auto"
                        Foreground="White" 
                        FontFamily="Verdana">
                <RichTextBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Channel Editor" />
                        <Separator/>
                        <!--<MenuItem Header="Select All" Click="SelectAll_Click"/>-->
                    </ContextMenu>
                </RichTextBox.ContextMenu>
            </uc:IrcRichTextBox>
            <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Center" Background="LightGray"/>

            <uc:MultiSelectListbox Grid.Column="2" ItemsSource="{Binding NickList}" 
                                      SelectedItemsList="{Binding SelectedNicks, Mode=OneWayToSource}"
                                      SelectionMode="Extended"
                                      Background="Black"
                                      Foreground="MediumPurple"
                                      FontFamily="Verdana"
                                      FontWeight="Bold" FontSize="10"/>
        </Grid>
        <uc:IrcCommandTextBox DataContext="{Binding }" Grid.Row="2" Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="Black" Foreground="White" FontFamily="Verdana"/>
    </Grid>
</UserControl>